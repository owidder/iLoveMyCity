<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackthedrive.bmw.de.hackthedrive" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    
    -->
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name=".MapPolylineActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name=".MapPolygonActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name=".MenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_menu">
        </activity>
        <activity
            android:name=".RestApiActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/rest_activity">
        </activity>
        <activity
            android:name=".MapHeatmapActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name=".PanelsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_panels">
        </activity>
        <activity
            android:name=".activity.RouteCreationMapActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_panels">
        </activity>
        <activity
            android:name=".activity.StartRouteActivity">
        </activity>
        <activity
            android:name=".activity.SaveNewRouteActivity">
        </activity>
        <activity
            android:name=".activity.AddPoiActivity">
        </activity>
        <activity
            android:name=".activity.SearchRouteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

    </application>

</manifest>
