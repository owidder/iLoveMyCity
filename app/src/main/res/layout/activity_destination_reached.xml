<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:iosched="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e5e5e5">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    iosched:cardBackgroundColor="#fff"
                    iosched:cardCornerRadius="@dimen/card_corner_radius"
                    iosched:cardElevation="@dimen/card_elevation"
                    iosched:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_fontFamily_medium"
                            android:text="Destination Reached!"
                            android:textColor="@color/theme_primary"
                            android:textSize="@dimen/text_size_xlarge"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:autoLink="web"
                            android:text="You have completed the route!"
                            android:textColor="@color/body_text_2"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:autoLink="web"
                            android:text="Please rate the route:"
                            android:textColor="@color/body_text_2"
                            android:textSize="@dimen/text_size_medium" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1.0"
                            android:rating="2.0" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        iosched:cardBackgroundColor="#fff"
                        iosched:cardCornerRadius="@dimen/card_corner_radius"
                        iosched:cardElevation="@dimen/card_elevation"
                        iosched:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="24dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_fontFamily_medium"
                                android:text="Your Statistics:"
                                android:textColor="@color/theme_primary"
                                android:textSize="@dimen/text_size_xlarge"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtCost"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_fontFamily_medium"
                                        android:text="43"
                                        android:textColor="@color/theme_primary"
                                        android:textSize="@dimen/text_size_xlarge" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:autoLink="web"
                                        android:text="Cost ($)"
                                        android:textColor="@color/body_text_2"
                                        android:textSize="@dimen/text_size_medium" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtDistance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_fontFamily_medium"
                                        android:text="120"
                                        android:textColor="@color/theme_primary"
                                        android:textSize="@dimen/text_size_xlarge" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:autoLink="web"
                                        android:text="Distance (Mi)"
                                        android:textColor="@color/body_text_2"
                                        android:textSize="@dimen/text_size_medium" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtPoiCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_fontFamily_medium"
                                        android:text="12"
                                        android:textColor="@color/theme_primary"
                                        android:textSize="@dimen/text_size_xlarge" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="1dp"
                                        android:autoLink="web"
                                        android:text="Fuel Usage"
                                        android:textColor="@color/body_text_2"
                                        android:textSize="@dimen/text_size_medium" />
                                </LinearLayout>
                                </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </FrameLayout>
        </ScrollView>
    </FrameLayout>

        <!-- Buttons -->
    <LinearLayout
        android:layout_height="48dp"
        android:background="#3f51b5"
        android:layout_gravity="bottom"
        android:layout_width="match_parent">


        <Button
            android:id="@+id/button_close"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:text="Close"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="@string/font_fontFamily_medium"
            android:textAllCaps="true"
            android:textColor="#fff" />

    </LinearLayout>
</LinearLayout>
